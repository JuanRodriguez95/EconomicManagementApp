@model IEnumerable<OperationTypes>

@{
    ViewData["Title"] = "List Operation Types";
}

<h1>Operation Types List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create Operation Types</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Operation Types</th>
            <th>Description</th>

        </tr>
    </thead>
    <tbody id="reordenable">
        @foreach (var operationTypes in Model)
        {
            <tr>
                <td>
                    <input type="hidden" value="@operationTypes.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@operationTypes.Id">Modify</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@operationTypes.Id">Delete</a>
                </td>
                <td>
                    @operationTypes.Name
                </td>
                <td>
                    @operationTypes.Description
                </td>
            </tr>
        }
    </tbody>
</table>
