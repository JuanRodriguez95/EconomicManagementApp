@model OperationTypes

@{
    ViewData["Title"] = "Delete Operation Type";
}

<h3 class="mb-3">¿Are you sure you want to delete the operation type?: @Model.Description?</h3>

<form asp-action="DeleteOperation">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
