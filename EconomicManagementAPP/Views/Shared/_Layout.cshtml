<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EconomicManagementAPP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EconomicManagementAPP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EconomicManagementAPP</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item px-1">
                            @*apuntamos al controller asp-controller="AccountTypes" y al view asp-action="Index"*@
                            <a class="btn btn-secondary" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
                        </li>
                        <li class="nav-item px-1">
                            @*apuntamos al controller asp-controller="AccountTypes" y al view asp-action="Index"*@
                            <a class="btn btn-secondary" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                        </li>
                        <li class="nav-item px-1">
                            @*apuntamos al controller asp-controller="AccountTypes" y al view asp-action="Index"*@
                            <a class="btn btn-secondary" asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a>
                        </li>
                        <li class="nav-item px-1">
                            @*apuntamos al controller asp-controller="AccountTypes" y al view asp-action="Index"*@
                            <a class="btn btn-secondary" asp-area="" asp-controller="AccountTypes" asp-action="Index">Account Types</a>
                        </li>
                        <li class="nav-item px-1">
                            @*apuntamos al controller asp-controller="AccountTypes" y al view asp-action="Index"*@
                            <a class="btn btn-secondary" asp-area="" asp-controller="OperationTypes" asp-action="Index">Operation Types</a>
                        </li>
                         <li class="nav-item">
                            <a class="btn btn-secondary" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-secondary" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EconomicManagementAPP - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
